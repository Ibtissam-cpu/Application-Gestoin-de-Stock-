<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tp1_jee.controller.RegisterController"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Inscription" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox spacing="10" maxWidth="300">
        <Label text="Username"/>
        <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur"/>

        <Label text="Email"/>
        <TextField fx:id="emailField" promptText="Entrez votre email"/>

        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe"/>

        <Label text="Confirm Password"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmez votre mot de passe"/>

        <Label fx:id="messageLabel" textFill="red" wrapText="true"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="S'inscrire" onAction="#handleRegister"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                    prefWidth="120"/>
            <Button text="Retour" onAction="#handleBack"
                    style="-fx-background-color: #757575; -fx-text-fill: white;"
                    prefWidth="120"/>
        </HBox>
    </VBox>
</VBox>