                        <Label fx:id="outOfStockLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #f44336;"/>
                    </VBox>
                </HBox>

                <!-- Section Ajustement de Stock -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label text="Ajuster le Stock" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="SÃ©lectionner un Produit"/>
                            <ComboBox fx:id="productComboBox" promptText="Choisir un produit..."
                                      maxWidth="Infinity" prefWidth="300"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Stock Actuel"/>
                            <TextField fx:id="currentStockField" editable="false"
                                       prefWidth="100" style="-fx-background-color: #e0e0e0;"/>
                        </VBox>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <VBox spacing="5">
                            <Label text="QuantitÃ© Ã  Ajouter/Retirer"/>
                            <TextField fx:id="quantityField" promptText="0" prefWidth="150"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Type d'OpÃ©ration"/>
                            <ComboBox fx:id="operationTypeComboBox" prefWidth="150">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Ajout"/>
                                        <String fx:value="Retrait"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <VBox spacing="5">
