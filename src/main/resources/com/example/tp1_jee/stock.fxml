                        </VBox>
                    </HBox>

                    <TextArea fx:id="reasonArea" promptText="Raison de l'ajustement (optionnel)..."
                              prefRowCount="2" wrapText="true"/>

                    <Label fx:id="messageLabel" wrapText="true" visible="false"
                           style="-fx-text-fill: #4CAF50; -fx-font-size: 12; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Tableau des mouvements de stock -->
                <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 15 0;">
                        <Label text="Historique des Mouvements"
                               style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ”„ Actualiser" onAction="#refreshHistory"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    </HBox>

                    <TableView fx:id="stockMovementsTable" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="productNameColumn" text="Produit" prefWidth="200"/>
                            <TableColumn fx:id="operationColumn" text="OpÃ©ration" prefWidth="100"/>
                            <TableColumn fx:id="quantityMovedColumn" text="QuantitÃ©" prefWidth="100"/>
