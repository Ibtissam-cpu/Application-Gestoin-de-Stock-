                          prefWidth="200" prefHeight="130">
                        <Label text="ðŸ“¦" style="-fx-font-size: 36;"/>
                        <Label text="Produits en Stock" style="-fx-font-size: 12; -fx-text-fill: #757575;"/>
                        <Label fx:id="inStockLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;"
                          prefWidth="200" prefHeight="130">
                        <Label text="âš ï¸" style="-fx-font-size: 36;"/>
                        <Label text="Stock Faible" style="-fx-font-size: 12; -fx-text-fill: #757575;"/>
                        <Label fx:id="lowStockLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #ff9800;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;"
                          prefWidth="200" prefHeight="130">
                        <Label text="ðŸš«" style="-fx-font-size: 36;"/>
