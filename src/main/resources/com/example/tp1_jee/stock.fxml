                    </TableView>
                </VBox>

                <!-- Alerte Stock Faible -->
                <VBox spacing="15" style="-fx-background-color: #fff3e0; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #ff9800; -fx-border-width: 2; -fx-border-radius: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="âš ï¸" style="-fx-font-size: 24;"/>
                        <Label text="Produits avec Stock Faible"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #f57c00;"/>
                    </HBox>

                    <ListView fx:id="lowStockListView" prefHeight="150"
                              style="-fx-background-color: white; -fx-border-color: #ff9800; -fx-border-radius: 5;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>