<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tp1_jee.controller.LoginController"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Connexion" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox spacing="10" maxWidth="300">
        <Label text="Username"/>
        <TextField fx:id="usernameField" promptText="Username"/>

        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <Label fx:id="messageLabel" textFill="red"/>

        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                maxWidth="Infinity"/>

        <Separator/>

